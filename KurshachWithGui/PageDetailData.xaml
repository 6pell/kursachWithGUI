<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KurshachWithGui"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      x:Class="KurshachWithGui.PageDetailData"
      mc:Ignorable="d" 
      d:DesignHeight="880" d:DesignWidth="1350"
      Title="PageDetailData" Height="880" Width="1350">
    <Grid Background="Gray" Height="880" Width="1350">
        <Label Foreground="black" Content="Page Detail" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="76" FontSize="48" FontStyle="Normal" Width="244"/>
        <DataGrid AutoGenerateColumns="False" Background="#40FFFFFF" Style="{StaticResource MaterialDesignDataGrid}" x:Name="DetailDataGrid" FontSize="16px" Margin="164,167,164,60">
            <DataGrid.Columns>
                <DataGridTextColumn CanUserReorder="False" Header="ID" Binding="{Binding id}"/>
                <DataGridTextColumn Header="Країна" Binding="{Binding country}"/>
                <DataGridTextColumn Header="Фірма" Binding="{Binding firm}"/>
                <!--<DataGridTextColumn Header="Марка" Binding="{Binding mark}"/>-->
                <DataGridTemplateColumn  Header="owner (as combobox)" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate >
                            <ComboBox
                            ItemsSource="{Binding Path=marks, RelativeSource={RelativeSource AncestorType={x:Type Page}}}"
                            DisplayMemberPath="name"
                            SelectedValuePath="idMark"
                            SelectedItem="{Binding idMark, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Агрегат" Binding="{Binding agregat}"/>
                <DataGridTextColumn Header="Вузол" Binding="{Binding vuzol}"/>
                <DataGridTextColumn Header="Деталь" Binding="{Binding detail}"/>
                <DataGridTextColumn Header="Ціна" Binding="{Binding price}"/>
                <DataGridTextColumn Header="К-сть" Binding="{Binding count}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Style="{StaticResource ButtonRevealStyle}" Background="#40FFFFFF" Click="SaveDetailData" Content="SAVE" HorizontalAlignment="Left" Margin="1251,810,0,0" VerticalAlignment="Top" Height="60" Width="89" FontSize="22"/>
        <TextBox x:Name="InputSearch" PreviewKeyUp="InputSearch_PreviewKeyUp" 
                 materialDesign:HintAssist.Hint="Input key" 
                 HorizontalAlignment="Left" Margin="164,93,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" 
                 Width="281" Height="42" FontSize="20" 
                 FontFamily="Segoe UI Semibold" 
                 Cursor="Arrow" materialDesign:TextFieldAssist.UnderlineBrush="black"/>
    </Grid>

</Page>
